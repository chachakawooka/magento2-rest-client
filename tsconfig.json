{
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["src/**/*.{ts,tsx}"],
    "useCache": true,
    "isolatedModules": true
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "tmp",
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2017",
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*",
    "tmp",
    "dist"
  ]
}